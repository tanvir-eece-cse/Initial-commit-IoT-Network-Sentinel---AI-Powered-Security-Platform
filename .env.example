# IoT Network Sentinel - Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=iot_sentinel

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=change-this-redis-password

# ===========================================
# JWT Configuration
# ===========================================
SECRET_KEY=change-this-to-a-very-long-random-string-minimum-32-characters

# ===========================================
# InfluxDB Configuration
# ===========================================
INFLUXDB_USER=admin
INFLUXDB_PASSWORD=change-this-influx-password
INFLUXDB_ORG=iot-sentinel
INFLUXDB_BUCKET=network_metrics
INFLUXDB_TOKEN=change-this-influxdb-token

# ===========================================
# Application Configuration
# ===========================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# ===========================================
# Grafana Configuration
# ===========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ===========================================
# ML Service Configuration
# ===========================================
ML_SERVICE_URL=http://ml-service:8001
MODEL_PATH=/app/models
